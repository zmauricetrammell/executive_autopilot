<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">

    <!-- Main Fragment -->


    <Button
        android:id="@+id/waypointFragmentButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/waypoints"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="250dp" />

    <Button
        android:id="@+id/stepFragmentButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/steps"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/waypointFragmentButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/taskFragmentButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/tasks"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/stepFragmentButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/routineFragmentButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/routines"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/taskFragmentButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp" />


</androidx.constraintlayout.widget.ConstraintLayout>